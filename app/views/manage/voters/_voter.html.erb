<h2>Luo uusi äänestäjä</h2>

<%= form_for @api_voter, url: manage_voters_path do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  <br>

  <%= f.label :email %><br>
  <%= f.text_field :email %>
  <br>

  <%= f.label :ssn %><br>
  <%= f.text_field :ssn %>
  <br>

  <%= f.label :student_number %><br>
  <%= f.text_field :student_number %>
  <br>

  <%= f.label :phone %><br>
  <%= f.text_field :phone %>
  <br>

  <%= f.label :faculty_code %><br>
  <%= f.text_field :faculty_code %>
  <br>

  <%= f.label :department_code %><br>
  <%= f.text_field :department_code %>
  <br>

  <p>
    Äänestäjän luominen lähettää hänelle sähköpostitse sisäänkirjautumisnlinkin.
    <br>
    Linkki on voimassa 60 minuuttia.
  </p>
  <%= f.submit "Luo äänestäjä", class: "btn btn-primary" %>
<% end %>
