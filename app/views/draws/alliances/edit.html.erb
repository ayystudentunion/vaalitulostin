<h1>Liittojen väliset arvonnat</h1>

<p><%= link_to 'Takaisin liittojen välisiin arvontoihin', draws_alliances_path %></p>

<% form_tag draws_alliance_path, :method => :put do -%>
<table>
<% @alliance_draw.alliance_drawings.each do |drawing| -%>
  <tr>
    <td><%= get_draw_candidate_from_alliance(drawing) %></td>
    <td><input name="alliance_drawing[<%= drawing.id %>]" type="text" /></td>
  </tr>
<% end -%>
</table>

<p><input type="submit" value="Tallenna" /> <%= link_to 'Arvo koneellisesti', '#machinedraw' %></p>
<% end -%>
