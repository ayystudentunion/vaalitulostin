<% if candidate.data_fixes.unapplied.count > 0 %>
  <table>
    <tr>
      <th>Field</th>
      <th>Old value</th>
      <th>New value</th>
    </tr>
  <% candidate.data_fixes.unapplied.each do |fix| %>
    <tr>
      <td><%= fix.field_name %></td>
      <td><%= fix.old_value %></td>
      <td><%= fix.new_value %></td>
      <% if can? :handle_fix, candidate %>
        <td><%= link_to 'Applied', apply_fix_admin_candidate_path(candidate, :fix => fix.id) %></td>
      <% end %>
    </tr>
  <% end %>
  </table
<% else %>
  <p>No fixes</p>
<% end %>
