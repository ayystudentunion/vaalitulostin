<h1>Kaikki ehdokkaat äänimäärineen</h1>

<table>
  <tr>
    <th colspan="2">Ehdokas</th>
    <th>Num</th>
    <th>Liitto</th>
    <th>Rengas</th>
    <th>Ääniä</th>
  </tr>
<% @candidates.each_with_index do |candidate, i| -%>
  <tr>
    <td><%= i+1 %><%= show_state_char(candidate) %></td>
    <td><%= candidate.candidate_name %></td>
    <td><%= candidate.candidate_number %></td>
    <td><%= candidate.electoral_alliance.shorten if candidate.electoral_alliance %></td>
    <td><%= candidate.electoral_alliance.electoral_coalition.shorten if candidate.electoral_alliance.electoral_coalition %></td>
    <td><%= candidate.total_votes %></td>
  </tr>
<% end -%>
</table>
